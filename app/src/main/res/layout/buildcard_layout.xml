<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/iv1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/iv2"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/iv1"
        android:layout_toEndOf="@+id/iv1" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/iv3"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/iv2"
        android:layout_toEndOf="@+id/iv2" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/iv4"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/iv3"
        android:layout_toEndOf="@+id/iv3" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/iv5"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/iv4"
        android:layout_toEndOf="@+id/iv4" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/iv6"
        android:layout_alignTop="@+id/iv5"
        android:layout_toRightOf="@+id/iv5"
        android:layout_toEndOf="@+id/iv5" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/iv7"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/iv6"
        android:layout_toEndOf="@+id/iv6" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Played"
        android:id="@+id/textView"
        android:layout_below="@+id/iv1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="5000"
        android:id="@+id/played_tv"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Win %"
        android:id="@+id/textView2"
        android:layout_below="@+id/iv3"
        android:layout_alignLeft="@+id/iv3"
        android:layout_alignStart="@+id/iv3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="5000"
        android:id="@+id/winper_tv"
        android:layout_alignTop="@+id/played_tv"
        android:layout_toRightOf="@+id/iv2"
        android:layout_toEndOf="@+id/iv2" />
</RelativeLayout>